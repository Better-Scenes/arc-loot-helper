{
	"name": "arc-loot-helper",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"prebuild": "npm run clean && npm run fetch-data",
		"clean": "node -e \"require('fs').rmSync('public/data', {recursive: true, force: true})\"",
		"fetch-data": "node scripts/fetch-data.js",
		"fetch-data:validate": "node scripts/fetch-data.validate.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage"
	},
	"dependencies": {
		"@headlessui/react": "^2.2.9",
		"@heroicons/react": "^2.2.0",
		"@tailwindcss/vite": "^4.1.17",
		"@tanstack/react-virtual": "^3.13.12",
		"clsx": "^2.1.1",
		"motion": "^12.23.24",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-router-dom": "^7.9.5",
		"tailwindcss": "^4.1.17",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"@vitejs/plugin-react": "^5.1.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.24",
		"globals": "^16.5.0",
		"jsdom": "^27.1.0",
		"prettier": "^3.6.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.8"
	}
}
